type SearchConnection {
  edges: [SearchEdge!]!
  pageInfo: PageInfo!
  totalCount: Int!
}

type SearchEdge {
  node: SearchNode!
  cursor: Cursor!
}

union SearchNode = App | Team | NaisJob

input SearchFilter {
  type: SearchType
}

enum SearchType {
  APP
  TEAM
  JOB
}

extend type Query {
  search(
    query: String!
    filter: SearchFilter
    first: Int
    last: Int
    after: Cursor
    before: Cursor
  ): SearchConnection!
}
