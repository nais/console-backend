type SearchConnection implements Connection {
    totalCount: Int!
    pageInfo: PageInfo!
    edges: [SearchEdge!]!
}

type SearchEdge implements Edge {
    node: SearchNode!
    cursor: Cursor!
}

union SearchNode = App | Team | NaisJob

input SearchFilter {
    type: SearchType
}

enum SearchType {
    APP
    TEAM
    NAISJOB
}

extend type Query {
    search(
        query: String!
        filter: SearchFilter
        first: Int
        last: Int
        after: Cursor
        before: Cursor
    ): SearchConnection!
}
