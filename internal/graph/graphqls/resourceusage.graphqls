extend type Query {
    dailyCPUUsageForApp(
        env: String!
        team: String!
        app: String!
    ): [ResourceUsageValue!]!

    dailyMemoryUsageForApp(
        env: String!
        team: String!
        app: String!
    ): [ResourceUsageValue!]!

    dailyCPURequestForApp(
        env: String!
        team: String!
        app: String!
    ) : [ResourceUsageValue!]!

    dailyMemoryRequestForApp(
        env: String!
        team: String!
        app: String!
    ) : [ResourceUsageValue!]!
}

type ResourceUsageValue {
    timestamp: Time!
    value: Float!
}